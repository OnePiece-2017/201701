<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
	login-required="true">

	<restrict>#{s:hasRole('?')}</restrict>
	<begin-conversation join="true" flush-mode="MANUAL" />

	<param name="usualProjectFrom" />
	<param name="usualProjectTheId" value="#{usualProjectHome.usualProjectTheId}" />

	<navigation from-action="#{usualProjectHome.persist}">
		<rule if-outcome="persisted">
			<end-conversation />
			<redirect view-id="/budget/UsualProjectList.xhtml" />
		</rule>
	</navigation>

	<navigation from-action="#{usualProjectHome.update}">
		<rule if-outcome="updated">
			<end-conversation />
			<redirect view-id="/budget/UsualProjectList.xhtml" />
		</rule>
	</navigation>

	<navigation from-action="#{usualProjectHome.remove}">
		<rule if-outcome="removed">
			<end-conversation />
			<redirect view-id="/budget/UsualProjectList.xhtml" />
		</rule>
		<rule if-outcome="failure">
			<end-conversation />
			<redirect view-id="/budget/UsualProjectList.xhtml" />
		</rule>
	</navigation>

</page>
