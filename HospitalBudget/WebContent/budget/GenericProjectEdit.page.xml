<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/GenericProjectList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{genericProjectHome.wire}"/>

   <param name="genericProjectFrom"/>
   <param name="genericProjectTheId" value="#{genericProjectHome.genericProjectTheId}"/>


   <navigation from-action="#{genericProjectHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/GenericProject.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{genericProjectHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/GenericProject.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{genericProjectHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/GenericProjectList.xhtml"/>
      </rule>
   </navigation>

</page>
